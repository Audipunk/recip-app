{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb","airbnb/hooks","eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],

    "rules": {
      // using underscores is a common Javascript convention and for certain databases it might be overly strict
      "no-underscore-dangle":"off",
      // helps avoid conflicts and allow flexibility
      "linebreak-style":"off",
      // this choice is a matter of personal or team preference
      "double-quoted": "off",
      "quotes":"off"
    },
    "overrides": [
        {
          "files": ["pages/FavoritesPage/**", "components/Context/Favorites-context/**"],
          "rules": {
            "ignoreComments": 0,
            "react/react-in-jsx-scope": 0,
            "no-underscore-dangle": 0,
            "no-trailing-spaces":0,
            "react/jsx-closing-bracket-location": 0,
            "linebreak-style":"off"
          }
        }
      ]
}
