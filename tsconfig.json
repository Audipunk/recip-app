{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "stories/Recipe.stories.tsx", "stories/RecipeList.stories.tsx", "tailwind.config.js", "components/LayOuts/Header/DropdownMenu.jsx", "components/LayOuts/Header/HeaderLayout.jsx", "components/LayOuts/Header/Navigation.jsx", "components/Recipes/Recipe.jsx", "helpers/settings/settings.jsx", "pages/index.jsx", "pages/[recipeName].jsx", "pages/_document.jsx", "pages/_app.jsx"],
  "exclude": ["node_modules"]
}
